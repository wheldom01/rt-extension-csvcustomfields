<%args>
$ARGSRef
$skip_create
$results => []
</%args>
<%init>
$RT::Logger->debug("Callback Create.html/BeforeCreate has been activated");

# Convert the CSV customfield arguments back into RT FreeForm text fields
my $errors = RT::Extension::CSVCustomFields::SpliceCSVFields(
    $ARGSRef    => $ARGSRef,
);

if (@$errors) {
    RT->Logger->error("Preventing create because update of ARGSRef failed");
    $$skip_create = 1;
    push @$results, @$errors;
}
</%init>
